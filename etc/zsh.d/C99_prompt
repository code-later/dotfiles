#!/bin/zsh

if [[ -f ~/.dotfiles/logo.ascii ]]; then
  cat ~/.dotfiles/logo.ascii
else
  figlet -f larry3d `hostname -s`
fi

echo ""
if fortune futurama &> /dev/null; then
  fortune futurama
else
  fortune startrek
fi
echo ""

setopt AUTO_CD
setopt MULTIOS
setopt CDABLEVARS

setopt PROMPT_SUBST

autoload -U promptinit
promptinit
prompt railsbros
