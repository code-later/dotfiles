local SKIP_LOGO=false
local SKIP_FORTUNE=true

function showlogo() {
  if [[ -n $SKIP_LOGO && $SKIP_LOGO == "true" ]]; then
    return 0
  fi

  if [[ -d ~/.dotfiles/logos ]]; then
    LOGOS=( ~/.dotfiles/logos/* )
    cat $LOGOS[$RANDOM%$#LOGOS+1]
  else
    figlet -f larry3d `hostname -s`
  fi

  echo ""
}

function showfortune() {
  if [[ -n $SKIP_FORTUNE && $SKIP_FORTUNE == "true" ]]; then
    return 0
  fi

  if fortune futurama &> /dev/null; then
    fortune futurama
  else
    fortune startrek
  fi

  echo ""
}

showlogo
showfortune

autoload -U promptinit
promptinit
prompt railsbros

